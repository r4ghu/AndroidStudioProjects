<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Spotify Streamer"
        android:id="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#65509B"
        android:onClick="sendMessage1"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="SCORE APP"
        android:id="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#65509B"
        android:onClick="sendMessage2"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="LIBRARY APP"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="190dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#65509B"
        android:onClick="sendMessage3"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="260dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#65509B"
        android:onClick="sendMessage4"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="XYZ READER"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="330dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#65509B"
        android:onClick="sendMessage5"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="400dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#2A1953"
        android:onClick="sendMessage6"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="My Nanodegree Apps"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000000"/>
</RelativeLayout>
